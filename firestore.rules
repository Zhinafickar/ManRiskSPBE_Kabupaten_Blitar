rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This is a basic rule for development that allows any authenticated
    // user to read and write to the database. For a production app, you
    // should implement more granular rules to secure your data.
    // e.g. allow users to only read/write their own data.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
