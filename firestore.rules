
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read on roles and users for registration purposes
    match /roles/{roleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /users/{userId} {
      allow list, get: if true; // Allow reading user list for role checks
      allow create: if true; // Allow user creation during registration
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow public list/read on adminTokens for verification. Write is protected.
    match /adminTokens/{tokenId} {
      allow list, get: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Default secure rules for other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
