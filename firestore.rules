
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    // --- Public access for registration and token verification ---
    match /users/{userId} {
      // Allow user creation by anyone (for registration)
      // Allow reading own profile
      // Allow admins to read/write all profiles
      allow read: if isAuth() || isAdmin();
      allow create: if true;
      allow update, delete: if isOwner(userId) || isSuperAdmin();
    }

    match /roles/{roleId} {
        // Allow anyone to create a role lock during registration.
        // Allow admins to read/delete role locks.
        allow create: if true;
        allow read, delete: if isAdmin();
    }
    
    match /adminTokens/{tokenId} {
        // Allow anyone to read tokens for verification.
        // Allow superadmins to create/delete.
        allow read: if true;
        allow create, delete: if isSuperAdmin();
    }

    // --- Authenticated user access ---
    match /surveys/{surveyId} {
      // Allow creating for any authenticated user.
      // Allow reading/updating/deleting only for the owner.
      // Allow full access for admins.
      allow create: if isAuth();
      allow read: if isAuth(); // Allow all auth users to read all surveys for OPD page
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    match /continuityPlans/{planId} {
      // Allow creating for any authenticated user.
      // Allow reading/updating/deleting only for the owner.
      // Allow full access for admins.
      allow create: if isAuth();
      allow read: if isAuth(); // Allow all auth users to read all plans for OPD page
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // --- Default deny all ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
