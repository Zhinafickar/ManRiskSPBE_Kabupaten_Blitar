rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // 🔐 Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuth() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    function isAdmin() {
      let role = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return isAuth() && (role == 'admin' || role == 'superadmin');
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // 👤 USERS COLLECTION
    match /users/{userId} {
      // Everyone authenticated can create their own user document (on sign up)
      allow create: if isAuth() && isOwner(userId);
      // Any authenticated user can list/get other users (for OPD page)
      allow get, list: if isAuth();
      // Owner or admin can update
      allow update: if isOwner(userId) || isAdmin();
      // Only admins can delete
      allow delete: if isAdmin();
    }

    // 🔐 ROLES COLLECTION
    match /roles/{roleId} {
      // Anyone authenticated can create (locks role on registration)
      allow create: if isAuth();
      // Only admins can read/delete locks
      allow read, delete: if isAdmin();
      // No one can update a role lock directly
      allow update: if false;
    }

    // 🔑 ADMIN TOKENS COLLECTION
    match /adminTokens/{tokenId} {
      // Anyone can read tokens (for admin verification page)
      allow get, list: if true;
      // Only superadmins can manage tokens
      allow create, update, delete: if isSuperAdmin();
    }

    // 📋 SURVEYS COLLECTION
    match /surveys/{surveyId} {
      // Any authenticated user can create a survey for themselves
      allow create: if isAuth();
      // Any authenticated user can list/get all surveys (for OPD details page)
      allow get, list: if isAuth();
      // Only the owner or an admin can update/delete
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // 📄 CONTINUITY PLANS COLLECTION
    match /continuityPlans/{planId} {
      // Any authenticated user can create a plan for themselves
      allow create: if isAuth();
      // Any authenticated user can list/get all plans (for OPD details page)
      allow get, list: if isAuth();
      // Only the owner or an admin can update/delete
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }
  }
}
