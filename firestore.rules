rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to roles and users for registration purposes
    match /roles/{roleId} {
      allow read, list: if true;
      allow write: if request.auth != null;
    }

    match /users/{userId} {
      allow read, list: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    match /adminTokens/{token} {
      allow list: if request.query.limit == 1; // Allows a very specific query for token verification
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
      // No public read on individual documents
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    match /surveys/{surveyId} {
      allow read, write: if request.auth != null;
    }

    match /continuityPlans/{planId} {
      allow read, write: if request.auth != null;
    }
  }
}
