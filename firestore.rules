rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
          || isSuperAdmin()
        );
    }
    
    function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
    }

    // ROLES: Tracks unique roles.
    match /roles/{role} {
      // Anyone can check if a role exists during registration. Secure because no sensitive data.
      allow get: if true;
      
      // A new user can create their role document during registration by proving ownership via the UID in the data.
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;

      // Only superadmins can update or delete role mappings.
      allow update, delete: if isSuperAdmin();
    }

    // USERS: Stores user profiles.
    match /users/{userId} {
      // A user can create their own profile. Validation is on the document's content, not the path.
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      
      // A user can read their own profile. Admins/Superadmins can read any profile.
      allow read: if isOwner(userId) || isAdmin();
      
      // A user can only update their own fullName. Super Admin can update anything.
      allow update: if (isOwner(userId) && request.resource.data.keys().hasOnly(['fullName', 'role'])) || isSuperAdmin();
      
      // Only a Super Admin can delete a user's profile document.
      allow delete: if isSuperAdmin();
    }

    // SURVEYS: Stores all survey data.
    match /surveys/{surveyId} {
      // A signed-in user can create a survey.
      allow create: if isSignedIn();
      
      // A user can only read surveys they created. Admins and Super Admins can read all surveys.
      allow read: if (resource.data.userId == request.auth.uid) || isAdmin();

      // Surveys are immutable for now.
      allow update, delete: if false;
    }
  }
}
